// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlite"
  url               = "file:./data.db"
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  profilePic String?
  phoneNr    Int?
  bio        String?
  fullName   String?
  tweets     Tweets[]
  trends     Trends[]
  chat       Chat[]
  comment    Comment[]
  like       Like[]
  retweet    ReTweet[]
  save       Save[]
}

model Trends {
  id          Int    @id @default(autoincrement())
  type        String
  trendTweets String
  title       String
  userId      Int
  User        User   @relation(fields: [userId], references: [id])
}

model Tweets {
  id          Int       @id @default(autoincrement())
  content     String?
  image       String?
  publishTime DateTime  @default(now())
  User        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  like        Like[]
  comment     Comment[]
  retweet     ReTweet[]
  save        Save[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  publishTime DateTime @default(now())
  User        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  Tweets      Tweets?  @relation(fields: [tweetsId], references: [id])
  tweetsId    Int?
}

model Like {
  id       Int     @id @default(autoincrement())
  Tweets   Tweets? @relation(fields: [tweetsId], references: [id])
  tweetsId Int?
  User     User?   @relation(fields: [userId], references: [id])
  userId   Int?
}

model ReTweet {
  id       Int    @id @default(autoincrement())
  Tweets   Tweets @relation(fields: [tweetsId], references: [id])
  tweetsId Int
  User     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model Save {
  id       Int    @id @default(autoincrement())
  Tweets   Tweets @relation(fields: [tweetsId], references: [id])
  tweetsId Int
  User     User   @relation(fields: [userId], references: [id])
  userId   Int
}

model Chat {
  id      Int    @id @default(autoincrement())
  message String
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?
}
